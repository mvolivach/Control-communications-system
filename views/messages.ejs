<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Email History</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
  <style>
    .email-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      max-width: 1200px;
      margin: auto;
      padding: 10px;
    }

    .email-list {
      width: 100%;
      list-style: none;
      padding: 0;
    }

    .email-item {
      display: flex;
      flex-direction: column;
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      margin-bottom: 10px;
      border-radius: 8px;
      padding: 10px;
    }

    .email-content {
      width: 100%;
    }

    .common-header,
    .common-body {
      margin-bottom: 10px;
    }

    .attachments img {
      max-width: 100%;
      height: auto;
      display: block;
      margin-top: 10px;
    }

    @media (max-width: 768px) {
      .email-item {
        padding: 5px;
      }

      .attachments img {
        max-width: 100%;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/nav.ejs') %>
  <div class="email-container">
    <ul class="email-list">
      <% messages.forEach(message => { %>
        <li class="email-item common-container <%= message.payload.headers.find(header => header.name === 'From').value.includes('mvolivach2003@gmail.com') ? 'sent' : '' %>">
          <div class="email-content">
            <div class="common-header">
              <span>Дата: <%= new Date(parseInt(message.internalDate)).toLocaleString() %></span>
              <strong>Тема: <%= message.payload.headers.find(header => header.name === 'Subject').value %></strong>
            </div>
            <div class="common-body">
              <div>Від: <%= message.payload.headers.find(header => header.name === 'From').value %></div>
              <div>Текст повідомлення: <%= message.snippet %></div>
              <% if (message.attachments && message.attachments.length > 0) { %>
                <div class="attachments">
                  <strong>Attachments:</strong>
                  <% message.attachments.forEach(attachment => { %>
                    <div class="attachment">
                      <img src="data:<%= attachment.mimeType %>;base64,<%= attachment.data %>" alt="<%= attachment.filename %>">
                    </div>
                  <% }); %>
                </div>
              <% } %>
            </div>
          </div>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
