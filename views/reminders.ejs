<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('partials/nav'); -%>
  <h1>Reminders for Student ID: <%= studentId %></h1>

  <h2>Add New Reminder</h2>
  <form action="/students/<%= studentId %>/reminders/add" method="POST">
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" required><br>
    <label for="reminderDate">Reminder Date:</label>
    <input type="date" id="reminderDate" name="reminderDate" required><br>
    <button type="submit">Add Reminder</button>
  </form>

  <h2>Existing Reminders</h2>
  <ul>
    <% reminders.forEach(function(reminder) { %>
      <li>
        <strong>Description:</strong> <%= reminder.description %><br>
        <strong>Date:</strong> <%= reminder.reminderDate.toDateString() %><br>
        <strong>Status:</strong> <%= reminder.isCompleted ? 'Completed' : 'Pending' %>
        <form action="/students/<%= studentId %>/reminders/<%= reminder._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete Reminder</button>
          </form>
          
      </li>
    <% }); %>
  </ul>
  <a href="/students">Back to Students</a>
</body>

</html>
